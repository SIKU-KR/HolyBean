<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/basketitem_design"
    android:paddingHorizontal="0dp"
    android:paddingVertical="15dp">

    <TextView
        android:id="@+id/orders_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="주문번호: 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/orders_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanum_gothic_bold"
        android:paddingHorizontal="10dp"
        android:text="금액: 2000"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/orders_method"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="50dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="결제방식: 계좌이체"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/orders_orderer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="50dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="주문자: 홍길동"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
</LinearLayout>